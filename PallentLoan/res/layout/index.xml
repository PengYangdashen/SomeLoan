<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/index"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/index_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/index_bottom"
        android:background="@color/white"
        android:orientation="vertical" >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/index_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/index_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingTop="4dp" >

            <ImageView
                android:id="@+id/index_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_icon_chose" />

            <TextView
                android:id="@+id/index_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/yellor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingTop="4dp" >

            <ImageView
                android:id="@+id/person_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/persion_icon_nor" />

            <TextView
                android:id="@+id/person_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/textcolor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingTop="4dp" >

            <ImageView
                android:id="@+id/more_img"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/more_icon_nor" />

            <TextView
                android:id="@+id/more_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textColor="@color/textcolor" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>