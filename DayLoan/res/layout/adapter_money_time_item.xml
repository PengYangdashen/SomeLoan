<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
	  android:padding="15dp" >
	     <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
         <TextView
	        android:id="@+id/money_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投资认证奖励"
            android:textColor="@color/yellor"
            android:gravity="center_vertical"
            android:textSize="15sp" />
         
         <TextView
	        android:id="@+id/money_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小小的"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/money_type"
            android:textColor="@color/textcolor"
            android:gravity="center_vertical"
            android:textSize="15sp" />
         <TextView
	        android:id="@+id/money_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-09-13"
            android:layout_below="@id/money_type"
            android:layout_marginTop="8dp"
            android:textColor="@color/textcolor"
            android:gravity="center_vertical"
            android:textSize="16sp" />
        
    </RelativeLayout>
	    
	    <TextView
	        android:id="@+id/get_money_value"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="￥350"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp" />
	</RelativeLayout>
    
