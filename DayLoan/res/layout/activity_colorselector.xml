<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/colorselector_viewContainer"
    android:paddingTop="@dimen/activity_colorselector_spacer"
    android:paddingRight="@dimen/activity_colorselector_spacer"
    android:paddingBottom="@dimen/activity_colorselector_spacer"
    android:paddingLeft="@dimen/activity_colorselector_spacer"
    android:clipToPadding="false"
    android:layout_gravity="center"
    >
    <com.moxie.crawler.common.ColorSelectorView
        android:id="@+id/colorselector_viewSatBri"
        android:layout_width="@dimen/activity_colorselector_hsvWidth"
        android:layout_height="@dimen/activity_colorselector_hsvHeight"
        />
    <ImageView
        android:id="@+id/ambilwarna_viewHue"
        android:layout_width="@dimen/activity_colorselector_hueWidth"
        android:layout_height="@dimen/activity_colorselector_hsvHeight"
        android:layout_toRightOf="@id/colorselector_viewSatBri"
        android:layout_marginLeft="@dimen/activity_colorselector_spacer"
        android:src="@drawable/colorselector_hue"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/colorselector_cursor"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:src="@drawable/colorselector_cursor"
        android:scaleType="matrix"
        />
    <ImageView
        android:id="@+id/colorselector_target"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/colorselector_target"
        android:scaleType="matrix"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorselector_state"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_colorselector_spacer"
        android:layout_below="@id/colorselector_viewSatBri"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >
        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/colorselector_warnaLama"
            android:background="#faa"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/colorselector_right"
            android:paddingLeft="@dimen/activity_colorselector_spacer"
            android:paddingRight="@dimen/activity_colorselector_spacer"
            />
        <View
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/colorselector_warnaBaru"
            android:background="#aaf"
            />
    </LinearLayout>

</RelativeLayout>