<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backcolor" >
    
<include layout="@layout/public_title"/>

<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="工作信息"
                android:layout_marginLeft="20dp"
                android:textColor="@color/yellor"
                android:textSize="14sp" />
<LinearLayout
    android:id="@+id/right"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/white_work_style"
    android:orientation="vertical"
  >


        <LinearLayout
            android:id="@+id/work1"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
             android:paddingLeft="15dp"
   android:paddingRight="15dp"
            android:background="@drawable/white_work_bottom_style" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="所属行业"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/work_sx"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="政府机关/社会团体"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />
        </LinearLayout>
        
        

        <LinearLayout
            android:id="@+id/work2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
             android:paddingLeft="15dp"
   android:paddingRight="15dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="公司名称"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:background="@null"
                android:hint="请输入公司名称"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/work3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
             android:paddingLeft="15dp"
   android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/white_work_top_style"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位电话"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:layout_marginRight="10dp" />
 <EditText
                android:id="@+id/phone_fore"
                android:layout_width="fill_parent"
                android:layout_height="28dp"
                android:layout_weight="1.2"
                android:background="@drawable/work_gray"
                android:hint="区号"
                android:gravity="center"
                android:inputType="number"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />
            <TextView
                android:layout_width="18dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:text=""
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gray"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />
             <EditText
                android:id="@+id/phone_back"
                android:layout_width="fill_parent"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:background="@drawable/work_gray"
                android:hint="单位电话"
                android:inputType="number"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />
        </LinearLayout>
</LinearLayout>
<TextView
        android:id="@+id/commit_txt"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/registbtn_style"
        android:text="提交"
        android:gravity="center"
        android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
