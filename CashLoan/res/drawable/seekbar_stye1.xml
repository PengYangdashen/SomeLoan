<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5.0dip" />

            <gradient
                android:angle="270.0"
                android:centerColor="#ffebeae7"
                android:centerY="0.75"
                android:endColor="#ffebeae7"
                android:startColor="#ffebeae7" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/yellor"
                    android:centerY="0.75"
                    android:endColor="@color/yellor"
                    android:startColor="@color/yellor" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5.0dip" />

                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/yellor"
                    android:centerY="0.75"
                    android:endColor="@color/yellor"
                    android:startColor="@color/yellor" />
            </shape>
        </clip>
    </item>

</layer-list>